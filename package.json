{
  "name": "planet-beauty-inventory-ai",
  "version": "1.0.0",
  "description": "AI-powered inventory management for beauty retailers",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "scripts": {
    "dev": "shopify app dev",
    "build": "remix vite:build",
    "vercel-build": "npm run db:setup && remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:setup": "prisma generate && prisma migrate deploy",
    "db:test": "node scripts/test-db-connection.js",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "setup:project": "node scripts/setup-project.js",
    "test:installation": "node scripts/test-installation-flow.js",
    "test:comprehensive": "node scripts/comprehensive-test-suite.js",
    "shopify:deploy": "shopify app deploy --client-id $SHOPIFY_API_KEY --force --verbose",
    "shopify:config": "shopify app config",
    "shopify:env": "shopify app env",
    "postinstall": "prisma generate",
    "postbuild": "echo 'Build completed successfully'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.10.1",
    "@remix-run/css-bundle": "^2.16.8",
    "@remix-run/dev": "^2.16.8",
    "@remix-run/fs-routes": "^2.16.8",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "@shopify/app-bridge-react": "^4.2.0",
    "@shopify/polaris": "^12.0.0",
    "@shopify/polaris-icons": "^9.3.1",
    "@shopify/shopify-api": "^11.13.0",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage-prisma": "^6.0.0",
    "csv-stringify": "^6.5.2",
    "isbot": "^5.1.0",
    "p-queue": "^7.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-tsconfig-paths": "^5.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.16.8",
    "@remix-run/route-config": "^2.16.8",
    "@shopify/cli": "^3.59.0",
    "@types/csv-stringify": "^1.4.3",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.16.1",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "prisma": "^6.10.1",
    "typescript": "^5.2.2",
    "vite": "^6.2.2",
    "vitest": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "extensions/*"
    ]
  },
  "trustedDependencies": [],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  },
  "keywords": [
    "shopify",
    "inventory",
    "ai",
    "beauty",
    "retail",
    "remix",
    "typescript"
  ],
  "author": "Planet Beauty",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/planet-beauty/inventory-ai"
  },
  "bugs": {
    "url": "https://github.com/planet-beauty/inventory-ai/issues"
  },
  "homepage": "https://github.com/planet-beauty/inventory-ai#readme"
}
