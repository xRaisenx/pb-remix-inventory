{
  "name": "app",
  "private": true,
  "scripts": {
    "shopify:deploy": "shopify app deploy --client-id $SHOPIFY_API_KEY --force --verbose",
    "db:init": "node scripts/db-init.js",
    "db:test": "node scripts/test-db-connection.js",
    "db:fix": "node scripts/fix-database-schema.js",
    "fix:typescript": "node scripts/fix-typescript-errors.js",
    "test:installation": "node scripts/test-installation-flow.js",
    "test:comprehensive": "node scripts/comprehensive-app-test.js",
    "test:functional": "node scripts/comprehensive-functional-test.js",
    "test:sms": "node -e \"import('./app/services/sms.service.js').then(m => m.createSMSService().sendSMS({to: '+1234567890', message: 'Test SMS', shopId: 'test'}))\"",
    "test:webhook": "node -e \"import('./app/services/webhook.service.js').then(m => m.createWebhookService({url: 'https://webhook.site/test'}).sendWebhook({url: 'https://webhook.site/test', shopId: 'test', payload: {event: 'test', timestamp: new Date().toISOString()}}))\"",
    "test:all": "npm run test:functional && npm run test:comprehensive",
    "test:real-services": "node scripts/test-real-services-compiled.js",
    "test:api-routes": "node scripts/test-api-routes.cjs",
    "test:webhook-processing": "node scripts/test-webhook-processing.cjs",
    "optimize:performance": "node scripts/performance-optimization.cjs",
    "enhance:security": "node scripts/security-enhancements.cjs",
    "db:indexes": "node scripts/add-session-indexes.js",
    "db:setup": "prisma generate && prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "build:with-testing": "node scripts/build-with-testing.js",
    "build": "remix vite:build",
    "dev": "shopify app dev",
    "dev:debug": "NODE_ENV=development DEBUG=* shopify app dev",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "npm run db:init",
    "postbuild": "npm run db:test",
    "vercel-build": "npm run db:setup && npm run db:fix && npm run db:test && remix vite:build",
    "health-check": "node -e \"import('./app/db.server.js').then(m => m.healthCheck().then(console.log))\"",
    "simulate:notifications": "node scripts/simulate-notifications.js",
    "simulate:shop": "node scripts/simulate-shop-interactions.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "type-check": "tsc --noEmit",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "verify:phase1": "node scripts/verify-phase1-fixes.js"
  },
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.10.1",
    "@remix-run/css-bundle": "^2.16.8",
    "@remix-run/dev": "^2.16.8",
    "@remix-run/fs-routes": "^2.16.8",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "@shopify/app-bridge-react": "^4.2.0",
    "@shopify/polaris": "^12.0.0",
    "@shopify/polaris-icons": "^9.3.1",
    "@shopify/shopify-api": "^11.13.0",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage-prisma": "^6.0.0",
    "@vercel/remix": "^2.16.7",
    "csv-stringify": "^6.5.2",
    "graphql-config": "^5.1.5",
    "isbot": "^5.1.0",
    "p-queue": "^7.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-tsconfig-paths": "^5.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.16.8",
    "@remix-run/route-config": "^2.16.8",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@shopify/cli": "^3.59.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/csv-stringify": "^1.4.3",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.1",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "prisma": "^6.11.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.2",
    "vitest": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "extensions/*"
    ]
  },
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5"
  }
}
